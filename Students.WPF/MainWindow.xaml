<Window x:Class="Students.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Students.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="File">
                <MenuItem Header="Save..."/>
                <MenuItem Header="Load..."/>
            </MenuItem>
            
            <MenuItem Header="View">
                <MenuItem Header="Next"/>
                <MenuItem Header="Previous"/>
            </MenuItem>
            
            <MenuItem Header="Students">
                <MenuItem Header="Add"/>
                <MenuItem Header="Delete"/>
            </MenuItem>
        </Menu>
        
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="First name: " Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="FirstNameBox" Grid.Row="0" Grid.Column="1" />
                
                <TextBlock Text="Second name: " Grid.Row="1" Grid.Column="0" />
                <TextBox Name="SecondNameBox" Grid.Row="1" Grid.Column="1" />
                
                <TextBlock Text="Faculty: " Grid.Row="2" Grid.Column="0" />
                <TextBox Name="FacultyBox" Grid.Row="2" Grid.Column="1" />
            </Grid>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Previous"/>
                <Button Content="Next"/>
            </StackPanel>
            
            <TextBlock Text="Search"/>
            
            <StackPanel Orientation="Horizontal">
                <ComboBox>
                    <ComboBoxItem Content="First name"/>
                    <ComboBoxItem Content="Second name"/>
                    <ComboBoxItem Content="Faculty"/>
                </ComboBox>
                
                <TextBlock Text=" = "/>
                
                <TextBox Name="SearchConditionBox"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
